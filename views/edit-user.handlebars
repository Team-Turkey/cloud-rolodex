<html>
  <body>
      {{#if loggedIn}}
    <h1>Edit your account</h1>

    <hr>

    <h2>Your avatar</h2>

    <input type="file" id="file-input">
    <p id="status">Please select a file</p>
    <img style="border:1px solid gray;width:300px;"  id="preview" src="/images/default.png">

    <h2>Your information</h2>

    {{!-- <form method="POST" action="/save-details"> --}}
    <form id="edit-user-form" class="edit-user-form">
      <input type="hidden" id="avatar-url" name="avatar-url" value="/images/default.png">
      <input id="first-name" type="text" name="first-name" placeholder="First Name" value="{{user.first_name}}"><br>
      <input id="last-name" type="text" name="last-name" placeholder="Last Name" value="{{user.last_name}}"><br>
      <input id="phone" type="text" name="phone" placeholder="phone" value="{{user.phone}}"><br>
      <input id="email" type="text" name="email" placeholder="email" value={{user.email}}><br>
      {{!-- <input id="password" type="text" name="password" placeholder="password"><br> --}}
      {{!-- <label for="role">Please Select your Role:</label><br> --}}

      {{!-- <select name="role" id="role">
        <option value="Sales">Sales</option>
        <option value="Engineer">Engineering</option>
        <option value="Accountant">Finance</option>
        <option value="Legal">Legal</option>
        <option value="Sanitation">Sanitation</option>
      </select> --}}
      <br>

      <h2>Save changes</h2>

      <button class="btn" id="update-btn" type="submit">Update Profile</button>
    </form>
    {{else}}
    <h1 href="/login">Unable to edit information, You are not logged in</h1>
    {{/if}}

    <script src="/javascript/edit-user.js"></script>
   
  </body>
</html>